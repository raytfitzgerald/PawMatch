rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /dogs/{dogId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isShelterAdmin == true;
    }
    
    match /shelters/{shelterId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isShelterAdmin == true;
    }
    
    match /matches/{matchId} {
      allow read, write: if request.auth != null && (request.auth.uid == resource.data.user_id || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isShelterAdmin == true);
    }
    
    match /messages/{messageId} {
      allow read, write: if request.auth != null && (request.auth.uid == resource.data.sender_id || request.auth.uid == resource.data.recipient_id);
    }
    
    match /appointments/{appointmentId} {
      allow read, write: if request.auth != null && (request.auth.uid == resource.data.user_id || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isShelterAdmin == true);
    }
  }
}